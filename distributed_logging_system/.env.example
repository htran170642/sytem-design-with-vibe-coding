# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
SERVICE_NAME=observability-platform

# Ingestion Service
INGESTION_HOST=0.0.0.0
INGESTION_PORT=8000
INGESTION_API_KEY=your-secret-api-key-here

# Query Service
QUERY_HOST=0.0.0.0
QUERY_PORT=8001

# Kafka / Redpanda
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=observability-processors
KAFKA_LOG_TOPIC=logs.raw
KAFKA_METRICS_TOPIC=metrics.raw
KAFKA_EVENTS_TOPIC=events.raw

# OpenSearch / Elasticsearch
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_USE_SSL=false
OPENSEARCH_LOGS_INDEX=logs
OPENSEARCH_METRICS_INDEX=metrics

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# S3 / MinIO
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=observability-data
S3_REGION=us-east-1

# Retention Policies (in days)
HOT_RETENTION_DAYS=7
WARM_RETENTION_DAYS=30

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Processing
BATCH_SIZE=100
FLUSH_INTERVAL_SECONDS=5
MAX_RETRIES=3
